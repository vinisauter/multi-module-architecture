# Uncomment the next line to define a global platform for your project
platform :ios, '12.0'

workspace 'App.xcworkspace'

def pod_tests
  pod 'Quick', '~> 4.0.0'
  pod 'Nimble', '~> 9.2.1'
end

target 'App' do
  project 'App.xcodeproj'
  # Comment the next line if you don't want to use dynamic frameworks
  use_frameworks!

  # Pods for App


  abstract_target 'Tests' do
    target "HandlersTests"
    pod_tests
  end
end

target 'Login' do
  project 'Modules/Journey/Login/Login.xcodeproj'
  use_frameworks!
  
  abstract_target 'Tests' do
    target "BusinessModelTests"
    pod_tests
  end
end
